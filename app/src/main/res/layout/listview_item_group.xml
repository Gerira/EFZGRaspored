<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/classItemContrainer">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:id="@+id/classItemLV"
        android:background="@drawable/list_row">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/imageView2"
            android:src="@drawable/ic_menu_calendar_gray"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:contentDescription="Schedule icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/classDay"
            android:textColor="@color/colorLV3"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_marginStart="10dp"
            android:text="none"
            android:layout_marginEnd="20dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/seperator"
            android:background="@color/colorAccentDark" />

    </RelativeLayout>

</LinearLayout>